{
  "compilerOptions": {
    /* Base Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true, 

    /* If NOT transpiling with tsconfig.json, ensure لن imports are allowed */
    // "verbatimModuleSyntax": true,
    // "allowImportingTsExtensions": true,

    /* Module Resolution */
    "module": "NodeNext", // Use NodeNext for modern Node.js ESM
    "moduleResolution": "NodeNext",
    // "baseUrl": ".", // Optional: Set base URL for path aliases
    // "paths": {}, // Optional: Define path aliases

    /* Output */
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true, // Generate .d.ts files
    "sourceMap": true, // Generate sourcemaps

    /* Linting */
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    
    "types": ["node"] // Include node types
  },
  "include": ["src/**/*.ts"], // Only include files in the src directory
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist output
} 